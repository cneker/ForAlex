<Window x:Class="lab04.Views.Positions.MakePosition"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab04.Views.Positions"
        mc:Ignorable="d"
        Title="MakePosition" Height="150" Width="250">
    <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Width="200">
        <TextBlock Text="Name"/>
        <TextBox x:Name="Name" Text="{Binding SelectedPosition.Name}"/>
        <TextBlock/>
        <Button Content="Add" Command="{Binding AddPosition}" Click="Accept_Click"/>
    </StackPanel>
</Window>
